<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="app_prefs"
    android:title="@string/prefs_title" >

    <ListPreference
        android:defaultValue="@string/pref_display_lang_default"
        android:dialogTitle="@string/pref_display_lang_title"
        android:entries="@array/pref_display_names"
        android:entryValues="@array/pref_display_values"
        android:key="pref_currencies_language"
        android:persistent="true"
        android:title="@string/pref_display_lang_title" android:summary="@string/pref_display_lang_summary"/>

    <Preference
        android:enabled="true"
        android:key="rateus"
        android:title="@string/pref_rateus_title" android:summary="@string/pref_rateus_summary"/>
    <Preference
        android:key="about"
        android:title="@string/pref_about_title" >
        <intent android:action="net.vexelon.bgrates.ui.activities.AboutActivity" />
    </Preference>

</PreferenceScreen>